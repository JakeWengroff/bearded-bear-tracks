<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Bookmarks</h1>
    <div class="row">
      <div class="col-md-8">
      
<table class="table table-hover">
  <thead>
    <tr>
      <th>Topic</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.topic.title %></td>
        <td><%= bookmark.url %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>
<br>
</div>

   <div class="col-md-4"> 
    <% if policy(Bookmark.new).create? %>
      <%= link_to 'New Bookmark', new_bookmark_path(@bookmark), class: 'btn btn-success' %>
      <% end %>
   </div>
  </div>
</div>


