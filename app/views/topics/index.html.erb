<div class="container-fluid">
  <h1>All Topics</h1>
  
  <div class="row">
    <div class="col-md-8">
      <% @topics.each do |topic| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">

              <%= link_to topic.title, topic %>
            </h4>
          </div>
        </div>
      <% end %>


    </div>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>


