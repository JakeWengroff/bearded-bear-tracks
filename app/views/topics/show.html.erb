<h1>Topic: <%= @topic.title %></h1>

<%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-primary' %>

<%= link_to "New Topic", new_topic_path(@topic), class: 'btn btn-success' %>

<%= link_to "Delete Topic", @topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' }, class: 'btn btn-danger' %> 
<br><br>

<h1>Bookmarks</h1> 

<table>
  <thead>
    <tr>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topic.bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.url %></td>
        <td><%= link_to 'Show', bookmark %></td>
        
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Bookmark.new).create? %>
<%= link_to 'New Bookmark', new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
<% end %>
